			<th>ID</th>
			<th>Email</th>
			<th>Nom d'utilisateur</th>
			<th>Date de cr√©ation</th>
		</tr>
		<tr>
		<% @user.each do |user|%>
			<td><%= user.id %></td>
			<td><%= user.email %></td>
			<td><%= user.name %></td>
			<td><%= user.created_at %></td>
		</tr>
		<%end%>
