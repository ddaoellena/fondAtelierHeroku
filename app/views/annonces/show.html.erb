<div class="container">

	<h3>Titre</h3>
	<%= @annonce.titre %>

	<h4>Crée le </h4><%=I18n.l @annonce.created_at, format: :default%>
	
	<div>
	<h3>Catégorie</h3>
		<%= @categorie %>
	<br>
	</div>

	<div>
	<h3>Type de transaction</h3>
		<%= @type %>
	<br>
	</div>

	<div>
	<h3>Description</h3>
		<%= @annonce.description %>
	<br>
	</div>

	<%if @annonce.telephone?%>
		<div>
			<h3>Téléphone</h3>
			<%= @annonce.telephone %>
			<br>
		</div>
	<%end%>

	<%if @annonce.ville_id? %>
		<div>
			<h3>Ville</h3>
			<%= @ville %>
			<br>
		</div>
	<%end%>

	<div>
	<h3><%= "Annonceur" %></h3>
		<%= @user_name_string %>
	<br>
	<div>

	<div>
		<%= image_tag @annonce.image.url, :id => "image_annonce"%>
	<br>
	</div>

	<% if user_signed_in? %>
		<% if current_user.id == @annonce.user_id || current_user.name == 'Admin'%>
			<div>
				<%= link_to "Editer", edit_annonce_path(@annonce) %> |
				<%= link_to "Supprimer", annonce_path, method: :delete, data: { confirm: "êtes vous sur ?"} %>
			</div>
		<%end%>
	<%end%>

	<%= link_to "Retour à la liste des annonces", annonces_path %>
</div>
